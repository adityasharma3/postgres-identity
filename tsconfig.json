{
  "compilerOptions": {
    "target": "ES6",                        // Use at least ES6 for async/await
    "module": "commonjs",                   // Use CommonJS module system
    "strict": true,                         // Enable all strict type-checking options
    "esModuleInterop": true,                // Enables emit interoperability with CommonJS modules
    "skipLibCheck": true,                   // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Disallow inconsistently-cased references to the same file.
    "outDir": "./dist",                     // Redirect output structure to the directory
    "rootDir": "./src",                     // Specify the root directory of input files
    "resolveJsonModule": true,              // Include modules imported with .json extension
    "strictFunctionTypes": false            // Allow using functions with differing parameter lists.
  },
  "include": [
    "src/**/*.ts"                           // Include all TypeScript files in the src directory
  ],
  "exclude": [
    "node_modules"                          // Exclude node_modules directory
  ]
}
