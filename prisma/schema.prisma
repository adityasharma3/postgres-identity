enum LinkedPrecedence {
  Primary
  Secondary
}

model Contact {
  id Int @default(autoincrement()) @id
  phoneNumber String?
  email String?
  linkedId Int?
  linkedPrecedence LinkedPrecedence @default(Primary) 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime? 
}